${1:$$(yas-auto-next
  (let* ((commit-types
          '(("ğŸ›fix" . "A bug fix")
            ("âœ¨feat" . "A new feature")
            ("â™»refactor" . "Change that neither fixes a bug nor adds a feature")
            ("ğŸ“docs" . "Documentation only changes")
            ("ğŸŒˆstyle" . "Changes that do not affect the meaning of the code (white-space, formatting, etc)")
            ("âœ…test" . "Adding missing tests of correcting existing ones")
            ("âªrevert" . "Commit reverts")
            ("âš¡perf" . "Performance improvements")
            ("ğŸ› improve" . "An improvement to a current feature")
            ("ğŸ‘·ci" . "Changes that effect CI configuration and scripts")
            ("ğŸ˜’chore" . "Update something without changing production code or impacting the user (release, version bump, etc)")
            ("ğŸ“¦build" . "Changes that effect the build system or external dependencies (gulp, npm, etc)")
            ("ğŸš§wip" . "Work In Progress")))
         (completed-type
          (yas-completing-read "Choose type: "
                               (mapcar
                                (lambda (ale)
                                  (let* ((key (car ale))
                                         (desc (cdr ale))
                                         (padding (make-string (- 16 (length key)) ?\ )))
                                    (put-text-property 0 (length desc) 'face 'completions-annotations desc)
                                    (format "%s %s %s" key padding desc)))
                                commit-types))))
    (car (split-string completed-type " ")))
    )}${2:$(if (not (string-blank-p yas-text)) "(")}${2:$$
